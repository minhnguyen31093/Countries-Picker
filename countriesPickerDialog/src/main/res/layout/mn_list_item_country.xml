<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mn_selector_item"
    android:padding="@dimen/mn_view_horizontal_padding_small">

    <ImageView
        android:id="@+id/mn_listItemCountry_imgFlag"
        android:layout_width="@dimen/mn_icon_medium"
        android:layout_height="@dimen/mn_icon_medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/mn_listItemCountry_txtCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mn_view_horizontal_margin_small"
        android:layout_toRightOf="@+id/mn_listItemCountry_imgFlag"
        android:textSize="@dimen/mn_text_size_medium" />

</RelativeLayout>